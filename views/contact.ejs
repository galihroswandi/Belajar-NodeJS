<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h1>Daftar Contact</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Nama</th>
                        <th scope="col">No Hp</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (contacts.length==0) { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-danger" role="alert">
                                    Kontak Masih kosong ðŸ˜¥
                                </div>
                            </td>
                        </tr>
                        <% } %>
                            <% contacts.forEach(contact=> { %>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>
                                        <%= contact.nama %>
                                    </td>
                                    <td>
                                        <%= contact.nohp %>
                                    </td>
                                    <td>
                                        <a href="/contact/<%= contact.nama %>"
                                            class="badge rounded-pill bg-success text-decoration-none font-normal">detail</a>
                                    </td>
                                </tr>
                                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>