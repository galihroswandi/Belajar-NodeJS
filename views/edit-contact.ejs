<div class="container">
    <div class="row">
        <div class="col-md-6 my-3">
            <h1>Ubah Contact</h1>

            <% if (typeof errors !=='undefined' ) { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>

                    <form action="/contact?_method=PUT" method="POST">
                        <input type="hidden" name="_id" value="<%= contact._id %>">
                        <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama; %>">
                        <div class="mb-3">
                            <label for="nama" class="form-label">Nama</label>
                            <input type="text" class="form-control" id="nama" name="nama" autocomplete="off" required
                                value="<%= contact.nama %>">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" autocomplete="off" required
                                value="<%= contact.email %>">
                        </div>
                        <div class="mb-3">
                            <label for="nohp" class="form-label">No HP</label>
                            <input type="text" class="form-control" id="nohp" name="nohp" autocomplete="off" required
                                value="<%= contact.nohp %>">
                        </div>
                        <button type="submit" class="btn btn-primary">Ubah Contact</button>
                    </form>
        </div>
    </div>
</div>