<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h1>Detail Contact</h1>
            <% if (!contact) { %>
                <div class="alert alert-danger" role="alert">
                    Nama kontak tidak ditemukan <br><a href="/contact" class="alert-link">&laquo; Kembali ke daftar
                        kontak</a>
                </div>
                <% }else { %>
                    <div class="card mt-3" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= contact.nama %>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <%= contact.nohp %>
                            </h6>
                            <p class="card-text">
                                <%= contact.email %>
                            </p>
                            <a href="/contact/update/<%= contact.nama %>" class="btn btn-info badge">ubah</a>
                            <!-- <a onclick="return confirm('Apakah anda yakin ingin menghapus ?')" href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge">hapus</a> -->
                            <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                                <input type="hidden" name="id" value="<%= contact._id %>">
                                <button type="submit" class="btn btn-danger badge"
                                    onclick="return confirm('Apakah anda yakin ingin menghapus ?')">hapus</button>
                            </form>
                            <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali ke daftar kontak.</a>
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>
</div>